<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>SkiEngine</RootNamespace>
    <LangVersion>7.3</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.6.1" />
    <PackageReference Include="Grpc.Tools" Version="1.17.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="%UserProfile%\.nuget\packages\grpc.tools\1.17.1\tools\windows_x86\protoc.exe -I. --csharp_out . --grpc_out . ProtobufModels.proto --plugin=protoc-gen-grpc=%UserProfile%\.nuget\packages\grpc.tools\1.17.1\tools\windows_x86\grpc_csharp_plugin.exe" />
  </Target>

</Project>
